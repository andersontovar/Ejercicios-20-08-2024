    "n_entero = int(input('Ingrese un numero entero positivo'))\n",
    "if n_entero <= 0:\n",
    "    print('El numero debe ser mayor a 0')\n",
    "else:\n",
    "    for i in range(n_entero + 1):\n",
    "        suma = i * (i + 1) / 2\n",
    "        i += 1\n",
    "    print(f'la suma de los primeros numeros desde 1 a {n_entero} es: {suma}')"
   ]
